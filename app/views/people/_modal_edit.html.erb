<div class="uk-modal-dialog uk-modal-body">
  <button class="uk-modal-close-default" type="button" uk-close></button>
  <h2 class="uk-heading-line uk-text-right uk-padding">
    <span><%= @person.last_name %><%= @person.first_name %></span>
  </h2>
  <%= form_for @person, remote: true, url: person_path(@person) do |f| %>
    <%= render partial: 'layouts/flash' %>

    <div class="uk-margin">
      <div class="uk-form-controls">
        <%= f.label :last_name, "氏", class: 'uk-form-label' %>
        <%= f.text_field :last_name, class: 'uk-input' %>
      </div>
    </div>

    <div class="uk-margin">
      <div class="uk-form-controls">
        <%= f.label :first_name, "名" , class: "uk-form-label"%>
        <%= f.text_field :first_name, class: 'uk-input' %>
      </div>
    </div>

    <div class="modal-footer actions">
      <%= f.submit "更新", class: "uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom" %>
    </div>

  <% end %>
</div>
