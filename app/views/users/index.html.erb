<% #Bootstrap4 %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<h1>ransackで作る検索画面</h1>
<div class="container mt-5 p-lg-5 bg-light">

  <%= search_form_for @q, url:'/search'  do |f| %>
    <div class="form-group">
      <%= f.label :name_cont, "名前：" %>
      <%= f.search_field :name_cont, class:'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email_cont, "メール：" %>
      <%= f.search_field :email_cont, class:'form-control' %>
    </div>
    <div class="form-group row">
      <div class="col-sm-12">
          <%= f.submit "検索", class:'btn btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
</div>

<div class="container mt-5 p-lg-5">
  <table class="table table-hover">
    <tbody>
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>