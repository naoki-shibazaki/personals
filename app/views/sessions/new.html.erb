<div id="sessions">
  <div class="uk-height-medium uk-flex uk-flex-center uk-flex-middle uk-background-cover uk-light uk-background-blend-lighten bk-img-color" data-src="/assets/login_bg.jpg" uk-img uk-height-viewport>
    <div class="uk-overlay uk-overlay-primary uk-position-center bugs-padding">
      <div class="uk-text-center">
        <i class="fas fa-user-circle fa-4x mb-3"></i>
        <h2>Login</h2>
        <p>Information is a WeaponPON!!!</p>

        <%= render partial: 'layouts/flash' %>
        <%= form_for(:session, url: login_path) do |f| %>
          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: user"></span>
              <%= f.email_field :email, class: 'uk-input', placeholder:'Email Address' %>
            </div>
          </div>

          <div class="uk-margin">
            <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: lock"></span>
              <%= f.password_field :password, class: 'uk-input', placeholder:'Password' %>
            </div>
          </div>

          <div class="uk-margin">
            <%= f.submit "LOGIN", class: 'uk-button uk-button-default' %>
          </div>
        <% end %>
      </div>
      
    </div>
      
  </div>
</div>